<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <style name="CalculatorButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/doppio_one_regular</item>
    </style>

    <style name="CalculatorButton.DigitButton">
        <item name="android:background">@drawable/circle_button_digit</item>
        <item name="android:textColor">@color/brown</item>
    </style>


    <style name="CalculatorButton.OperationButton">
        <item name="android:background">@drawable/circle_button_digit</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>